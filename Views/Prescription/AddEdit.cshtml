@model Prescription

@{
    string action = ViewBag.Action ?? "Add";
    ViewData["Title"] = action + " Prescription";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; border-radius: 1rem;">
        <h3 class="mb-3 text-center">@ViewData["Title"]</h3>

        <form asp-action="@(action == "Add" ? "Create" : "Edit")"
              asp-controller="Prescription"
              method="post">

            @if (Model.PrescriptionId > 0)
            {
                <input type="hidden" asp-for="PrescriptionId" />
            }

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="MedicationName" class="form-label"></label>
                <input asp-for="MedicationName" class="form-control" />
                <span asp-validation-for="MedicationName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FillStatus" class="form-label"></label>
                <select asp-for="FillStatus" class="form-select">
                    <option value="New">New</option>
                    <option value="Filled">Filled</option>
                    <option value="Pending">Pending</option>
                </select>
                <span asp-validation-for="FillStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cost" class="form-label"></label>
                <input asp-for="Cost" class="form-control" step="0.01" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RequestTime" class="form-label"></label>
                <input asp-for="RequestTime" class="form-control" readonly />
                <div class="form-text">Request time is set automatically when adding, and does not change on edit.</div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>