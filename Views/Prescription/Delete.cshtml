@model Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; width: 100%; border-radius: 1rem;">
        <h3 class="mb-3 text-danger">Delete Prescription</h3>
        <p>Are you sure you want to delete <strong>@Model.MedicationName</strong>?</p>

        <form asp-action="DeleteConfirmed" method="post" class="mt-3">
            <input type="hidden" asp-for="PrescriptionId" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>